; %%base16_template: polybar##default %%
[colors]
base00 = ee0c0d0e
base01 = 2e2f30
base02 = 515253
base03 = 737475
base04 = 959697
base05 = b7b8b9
base06 = dadbdc
base07 = fcfdfe
base08 = e31a1c
base09 = e6550d
base0A = dca060
base0B = 31a354
base0C = 80b1d3
base0D = 3182bd
base0E = 756bb1
base0F = b15928

; %%base16_template_end%%

background = ${colors.base00}
background-alt = ${colors.base03}
foreground = ${colors.base07}
foreground-alt = ${colors.base0C}
primary = ${colors.base03}
secondary = ${colors.base05}
alert = ${colors.base08}

[bar/primary]
monitor = ${env:MONITOR:HDMI-1}
font-0 = "Misc Tamsyn:pixelsize=14"
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;0
background = ${colors.background}
foreground = ${colors.foreground}

modules-left = i3
modules-center = mpd
modules-right = pacman rss alerts eth pulseaudio date menu-power
height = 20

[bar/secondary]
inherit = bar/primary
modules-right = eth pulseaudio date
monitor = ${env:MONITOR:HDMI-1}

[module/date]
type = internal/date
interval = 5

date = 
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = î€–
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% %time%

[module/eth]
type = internal/network
interface = enp7s0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = "î†œ "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = "%upspeed:5%:%downspeed:5%"

format-disconnected = "Unkn"
;format-disconnected-foreground = ${colors.alert}

[module/alerts]
type = custom/script
exec = ~/.config/polybar/alerts.sh
click-left = /usr/lib/firefox/firefox --new-tab https://alerta.smuth.me
background = ${colors.background}
format-foreground = ${colors.alert}

[module/pacman]
type = custom/script
exec = ~/.config/polybar/pacman.sh
click-left = /usr/bin/alacritty -e sudo pacman -Syu
background = ${colors.background}
format-foreground = ${colors.base0A}
interval = 300

[module/rss]
type = custom/script
exec = ~/.config/polybar/rss.sh
click-left = /usr/lib/firefox/firefox --new-tab https://miniflux.smuth.me
background = ${colors.background}
format-foreground = ${colors.base09}

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
icon-pause = î™
icon-play = î˜
icon-prev = î•
icon-next = î›
format-online = <icon-prev> <icon-play> <icon-pause> <label-song> <icon-next>
format-paused = <icon-play> <label-song>
label-song = %album-artist% - %title%
format-online-background = ${colors.base0D}
format-online-foreground = ${colors.base00}

[module/menu-power]
type = custom/menu
expand-right = false
label-open = î„Œ
label-close = X
label-separator = |
format-spacing = 1
menu-0-0 = Reboot
menu-0-0-exec = systemctl reboot
menu-0-1 = Shutdown
menu-0-1-exec = systemctl poweroff

[module/pulseaudio]
type = internal/pulseaudio
format-background = ${colors.base02}

format-volume-prefix = îˆƒ
format-volume-prefix-foreground = ${colors.foreground-alt}
format-volume = <label-volume>
label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}

label-muted = îˆ‚ mute
label-muted-foreground = ${colors.alert}

ramp-volume-0 = ğŸ”ˆ
ramp-volume-1 = ğŸ”‰
ramp-volume-2 = ğŸ”Š

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true
label-active-font = 0
label-mode-padding = 0
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.base0C}
label-focused-underline= ${colors.primary}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

; Separator in between workspaces
; label-separator = |

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

