#!/bin/bash
# OS-dependant aliases
# FreeBSD hates ls
if [[ $OSTYPE != freebsd* && $OSTYPE != darwin* ]]; then 
  alias ls='ls --color=auto'
  # shellcheck disable=SC2046
  eval $(dircolors -b)
fi

# Ansible
alias ap='ansible-playbook'

# Modified commands
alias emacs='emacs -nw'
alias grep='grep --color=auto -D skip'
alias ping='ping -c 5'
alias du='du -kh' # Makes a more readable output.
alias df='df -kTh'
alias mkdir='mkdir -pv'
alias ag='ag --noaffinity'

# Moving around
alias ..="cd .."
alias ...="cd ../.."

# Modify ls
alias lL='ls -lL'
alias ll='ls -lh'
alias la='ll -A'
alias lx='ll -BX'       # sort by extension
alias lz='ll -rS'       # sort by size
alias lt='ll -rlt'      # sort by date
alias lm='la -U | less' # For lots of files

# Slightly dangerous stuff
alias sui='sudo -iu'
alias panic='tar cxvf ../panic.tar *' # First thing to do in an emergency? Back it up!

# Misspellings
alias eamcs='emacs'
alias sl='ls'
alias xs='cd'

# Git aliases
alias gcl='git clone'
alias ga='git add'
alias gall='git add .'
alias g='git'
alias gst='git status -sb'
alias gs='git status -sb'
alias gp='git push'
alias gpom='git push origin master'
alias gplom='git pull origin master'
alias gc='git commit -v'
alias gcm='git commit -m'
alias gca='git commit --amend --no-edit'

# Tmux alias
alias tmux='tmux -u2'

# Emacs
alias mu4e='emacs -f mu4e'
alias magit='emacs -f magit'

# Vagrant
alias v='vagrant'
alias vp='vagrant provision'
alias vup='vagrant up'
alias vssh='vagrant ssh'
alias vstatus='vagrant global-status'

# virtualenv
alias venv='source ~/venv/bin/activate'

# File modification
alias stripwhite="sed -i -e's/[[:space:]]*$//'"

# k8s
alias kc='kubectl --namespace=${K8S_NS:-default}'
